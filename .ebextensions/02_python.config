container_commands:

  01_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 /var/app/current/manage.py migrate --noinput"
    leader_only: true
  02_createsu:
    command: "source /var/app/venv/*/bin/activate && python3 /var/app/current/ createsu"
    leader_only: true
  03_collectstatic:
    command: "source /var/app/venv/*/bin/activate && && python3 /var/app/current/ collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: terp_django.settings
    "PYTHONPATH": "/var/app/current/app/terp_django:$PYTHONPATH"
    aws:elasticbeanstalk:container:python:
     WSGIPath: terp_django.wsgi:application
    NumProcesses: 3
    NumThreads: 20
  aws:elasticbeanstalk:environment:proxy:staticfiles:
    /static: "www/static/"
